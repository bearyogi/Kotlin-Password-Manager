<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <permission android:name="com.example.bamfinalproject.permission.READ_LOGIN_PASSWORD"
        android:protectionLevel="signature" />

    <permission android:name="com.example.bamfinalproject.permission.WRITE_LOGIN_PASSWORD"
        android:protectionLevel="signature" />

    <application android:requestLegacyExternalStorage="true"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.BamFinalProject"
        tools:targetApi="31">

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.RegisterActivity"/>
        <activity android:name=".activity.LoginActivity"/>
        <activity android:windowSoftInputMode="adjustPan" android:name=".activity.DataActivity" />
        <activity android:name=".activity.OptionsActivity"/>

        <provider
            android:name="com.example.bamfinalproject.provider.DataProvider"
            android:authorities="com.example.bamfinalproject.authorities.LOGIN_PASSWORD"
            android:exported="true"
            android:protectionLevel="signature"
            android:readPermission="com.example.bamfinalproject.permission.READ_LOGIN_PASSWORD"
            android:writePermission="com.example.bamfinalproject.permission.WRITE_LOGIN_PASSWORD"
            tools:ignore="ExportedContentProvider"/>

    </application>
</manifest>